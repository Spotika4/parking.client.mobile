<?xml version='1.0' encoding='utf-8'?>
<widget id="%APP_ID%" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>%APP_NAME%</name>
    <description>%APP_DESCRIPTION%</description>
    <author email="%APP_AUTHOR_EMAIL%" href="%APP_AUTHOR_HREF%">%APP_AUTHOR%</author>
    <content src="index.html" />
    <access origin="http://%DOMAIN%" />
    <access origin="https://%DOMAIN%" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="AndroidXEnabled" value="true" />
        <preference name="enableJetifier" value="true" />
        <preference name="android-minSdkVersion" value="21" />
        <preference name="android-targetSdkVersion" value="29" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
